
<h2>Register new user</h2>

<%= form_for(@resource, as: @resource_name, url: registration_path(@resource_name), html: { class: "form-signin" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: @resource %>

  <div class="form-floating">
    <%= f.label :email, class: "visually-hidden" %>
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email address" %>
  </div>

  <div class="form-floating">
    <%= f.label :name, class: "visually-hidden" %>
    <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name", placeholder: "Name" %>
  </div>

  <div class="form-floating">
    <%= f.label :password, class: "visually-hidden" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Password" %>
  </div>

  <div class="form-floating">
    <%= f.label :password_confirmation, class: "visually-hidden" %>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Confirm Password" %>
  </div>

  <div class="checkbox mb-3">
    <label>
      <%= f.check_box :remember_me %> Remember me
    </label>
  </div>

  <div class="text-center">
    <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
